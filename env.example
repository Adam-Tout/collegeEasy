# API Configuration
# In production, this should be your Vercel deployment URL (e.g., https://your-app.vercel.app/api/chat)
# In development with Vercel CLI, use /api/chat (relative path)
# Leave empty to use default: /api/chat
VITE_API_URL=
VITE_APP_NAME=Canvas AI Assistant
VITE_APP_VERSION=1.0.0

# Backend API Configuration
# Set to 'false' to disable backend API and use demo mode
# Default: true (uses backend API)
VITE_USE_BACKEND_API=true

# Note: OpenAI API key is now stored securely in Vercel environment variables
# Do NOT set VITE_OPENAI_API_KEY - it's no longer used
# Set OPENAI_API_KEY in Vercel dashboard instead

# Google OAuth (Optional)
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here

# Payment Processing (Stripe)
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Canvas API Configuration
VITE_CANVAS_API_URL=https://your-canvas-instance.instructure.com/api/v1

# Development
VITE_DEBUG=false
VITE_NODE_ENV=development
